<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D50000"
        >
        <TextView
            android:layout_weight="6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Cart"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"
            android:layout_centerVertical="true"
            android:gravity="center"
            />
        <ImageButton
            android:id="@+id/ibtn_back_cart"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_32"
            android:background="@color/motrang"
            android:padding="10dp"
            android:onClick="Back"
            />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_weight="8"
        android:id="@+id/rcv_product_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </androidx.recyclerview.widget.RecyclerView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: "
            android:textSize="25sp"
            android:textColor="#FF3300"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"
            />
        <TextView
            android:id="@+id/countPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="25sp"
            android:textColor="#FF3300"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"
            android:layout_toRightOf="@id/tv_1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="đ"
            android:textSize="25sp"
            android:textColor="#FF3300"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"
            android:layout_toRightOf="@id/countPrice"/>

        <Button
            android:id="@+id/btn_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Thanh Toán"
            android:textAllCaps="false"
            android:background="@drawable/custom_add_product"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_background_dialog_registration"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:paddingVertical="20dp"
        android:layout_marginHorizontal="50dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registration"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:textStyle="italic"
            android:fontFamily="serif"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Username:"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/edt_new_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="abc..."
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/white"
            android:textSize="20dp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:background="@drawable/custom_edt_dialog_registration"
            android:paddingLeft="15dp"
            android:paddingVertical="8dp"
            android:textCursorDrawable="@null"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Password:"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/edt_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="********"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/white"
            android:textSize="20dp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:background="@drawable/custom_edt_dialog_registration"
            android:paddingLeft="15dp"
            android:paddingVertical="8dp"
            android:textCursorDrawable="@null"
            android:password="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter new password:"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/edt_enter_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="********"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/white"
            android:textSize="20dp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:background="@drawable/custom_edt_dialog_registration"
            android:paddingLeft="15dp"
            android:paddingVertical="8dp"
            android:textCursorDrawable="@null"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            >

            <Button
                android:id="@+id/btn_registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/custom_btn_dialog_registration"
                />
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/custom_btn_dialog_registration"
                />
        </RelativeLayout>
    </LinearLayout>

</layout>
